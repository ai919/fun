{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dofun.local/schema/quiz-import.schema.json",
  "title": "QuizImportPayload",
  "type": "object",
  "additionalProperties": false,
  "required": ["test", "questions", "results"],
  "properties": {
    "test": {
      "type": "object",
      "additionalProperties": false,
      "required": ["slug", "title", "description", "tags", "status"],
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "maxLength": 80
        },
        "title": {
          "type": "string",
          "maxLength": 255
        },
        "subtitle": {
          "type": "string",
          "maxLength": 255
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "title_color": {
          "type": "string",
          "pattern": "^#([0-9a-fA-F]{6})$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "maxItems": 8,
          "uniqueItems": true
        },
        "status": {
          "type": "string",
          "enum": ["draft", "published", "archived"]
        },
        "sort_order": {
          "type": "integer",
          "minimum": 0
        },
        "scoring_mode": {
          "type": "string",
          "enum": ["simple", "dimensions", "range", "custom"],
          "default": "simple"
        },
        "scoring_config": {
          "type": ["object", "null"],
          "additionalProperties": true
        },
        "display_mode": {
          "type": "string",
          "enum": ["single_page", "step_by_step"],
          "default": "single_page"
        },
        "play_count_beautified": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "emoji": {
          "type": "string",
          "maxLength": 16,
          "pattern": "^[\u0000-\uFFFF]+$"
        },
        "show_secondary_archetype": {
          "type": "boolean",
          "default": true
        },
        "show_dimension_table": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "options"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "hint": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["key", "text"],
              "properties": {
                "key": {
                  "type": "string",
                  "pattern": "^[A-Z]$"
                },
                "text": {
                  "type": "string",
                  "minLength": 1
                },
                "map_result_code": {
                  "type": "string",
                  "maxLength": 64
                },
                "score_override": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "title", "description"],
        "properties": {
          "code": {
            "type": "string",
            "maxLength": 64
          },
          "title": {
            "type": "string",
            "maxLength": 255
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "image_url": {
            "type": "string",
            "format": "uri"
          },
          "min_score": {
            "type": "integer",
            "minimum": 0
          },
          "max_score": {
            "type": "integer",
            "minimum": 0
          },
          "social_quote": {
            "type": "string"
          }
        }
      }
    }
  }
}

